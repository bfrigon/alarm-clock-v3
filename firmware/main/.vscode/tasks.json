{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Verify",
            "type": "process",
            "command": "make",
            "problemMatcher": {
                "base": "$gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },

        {
            "label": "Upload",
            "type": "process",
            "command": "make",
            "args": [
                "upload"
            ],
            "problemMatcher": {
                "base": "$gcc"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },

        {
            "label": "Clean",
            "type": "process",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },

        {
            "label": "Serial monitor",
            "type": "shell",
            "command": "make",
            "args": [
                "monitor"
            ],            
            "problemMatcher": []      ,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }   
        }
    ]
}

